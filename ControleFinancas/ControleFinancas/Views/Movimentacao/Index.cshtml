@model IList<ControleFinancas.Entidades.Movimentacao>

@Html.ActionLink("Nova movimentação", "Form", "Movimentacao")

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Usuário</th>
            <th>Valor</th>
            <th>Tipo</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Usuario</td>
                <td>@m.Valor</td>
                <td>@m.Tipo</td>
                <td>@m.Data</td>
            </tr>
        }
    </tbody>
</table>